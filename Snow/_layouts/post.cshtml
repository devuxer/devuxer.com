@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Snow.ViewModels.PostViewModel>

@using System.Collections.Generic
@{
    Layout = "default.cshtml";
}

<div id="post">
    <h1>@Model.Title</h1>
    <div class="post-note">
        posted on @Model.PostDate.ToString("dd MMM yyyy")
        @foreach (var category in Model.Categories)
        {
            @:| <a href="/category/@category.Url">@category.Name</a>
        }
      
        <!-- AddThis Button BEGIN -->
        <div class="addthis_toolbox addthis_default_style ">
            <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
            <a class="addthis_button_tweet"></a>
            <a class="addthis_button_pinterest_pinit" pi:pinit:layout="horizontal"></a>
            <a class="addthis_counter addthis_pill_style"></a>
        </div>
        <script type="text/javascript">var addthis_config = {"data_track_addressbar":true};</script>
        <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-52af4cfd284f7c10"></script>
        <!-- AddThis Button END -->
    </div>
    @Html.RenderSeries()
    @Html.Raw(Model.PostContent)
    @Html.RenderDisqusComments("devuxer")
</div>